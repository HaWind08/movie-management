mixin alert-success(time)
    - if (messages.success)
        div(
            class="toastAlert toastAlert-success"
            show-alert
            data-time=time
        )
            .toastAlert-content
                i.fas.fa-solid.fa-check.check
                .message
                    span.text.text-1 Thành công
                    span.text.text-2 #{messages.success} 
            i.fa-solid.fa-xmark.close
            .progress(class=messages.success ? 'active' : '')

