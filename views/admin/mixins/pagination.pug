mixin pagination(pagination)
    nav
        ul.pagination.d-flex.justify-content-center.flex-wrap.pagination-rounded-flat.pagination-success
            - if(pagination.currentPage > 1)
                li.page-item
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage-1
                    )
                        i.fa.fa-angle-left

            - for (var i = 1; i <= pagination.totalPage; i++)        
                - if( i == 1 || i == pagination.totalPage || (i >= pagination.currentPage - 1 && i <= pagination.currentPage + 1))
                    li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                        button(
                            class="page-link item"
                            button-pagination=i
                        ) #{i}
                - else if (i === pagination.currentPage - 2 || i === pagination.currentPage + 2)
                    li.page-item.disabled
                        span.page-link ...

            - if(pagination.currentPage < pagination.totalPage)
                li.page-item
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage+1
                    )
                        i.fa.fa-angle-right