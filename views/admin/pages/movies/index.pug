extends ../../layouts/default.pug
include ../../mixins/moment.pug
include ../../mixins/pagination.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug

block main

    h1.page-title Phim đang chiếu

    .card-mb-3 
            .card-header Bộ lọc và tìm kiếm
            .card-body 
                .row
                    .col-6
                        +filter-status(filterStatus)
                    .col-6
                        +search(keyword)

    .card-mb-3 
        .card-header.table-title Danh sách
            .card-body
                .row.mb-3 
                    .col-8
                        
                    .col-4.text-right
                        a(
                            href=`${prefixAdmin}/movies/create`
                            class="btn btn-outline-success"
                        ) + Thêm mới

                table(
                    class="table-bordered table-hover table table-sm"
                    checkbox-multi
                )
                    thead 
                        tr 
                            //- th 
                            //-     input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh 
                            th Tiêu đề
                            th Thời lượng phim
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Người cập nhật
                            th Hoạt động
                    tbody 
                        each item, index in movies 
                            tr 
                                //- td 
                                //-     input(
                                //-         type="checkbox"
                                //-         name="id"
                                //-         value=item.id
                                //-     )
                                //- td #{pagination.limitItems*(pagination.currentPage - 1) + (index + 1)}
                                td #{index + 1}
                                td
                                    img(
                                        src=item.thumbnail, 
                                        alt=item.title,
                                        width="60px",
                                        height="80px"
                                    )
                                td #{item.title}
                                td #{item.duration}
                                td 
                                    input(
                                        type="number"
                                        value=item.position 
                                        style="width: 60px"
                                        min="1"
                                        name="position"
                                        readonly
                                    )
                                td
                                    if(item.status == "active")
                                        a(
                                            href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-successCreate"
                                        ) Hoạt động 
                                    else 
                                        a(
                                            href="javascript:;" 
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge badge-dangerCreate"
                                        ) Dừng hoạt động
                                td 
                                    p.mb-1 #{item.accountFullName}
                                    p.mb-1 
                                        +formatDateTime(item.createdBy.createdAt)
                                td 
                                    //- - const updatedBy = item.updatedBy.slice(-1)[0]
                                    //- if(updatedBy)
                                    //-     p #{updatedBy.accountFullName}
                                    //-     p 
                                    //-         +formatDateTime(updatedBy.updatedAt)
                                td
                                    a(
                                        href=`${prefixAdmin}/movie/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                    a(
                                        href=`${prefixAdmin}/movie/edit/${item.id}`
                                        class="btn btn-warning btn-sm ml-1"
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1"
                                        button-delete
                                        data-id=item.id
                                    ) Xóa

        //- pagination
        +pagination(pagination)


        form(
            action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/movies/change-status`
        ) 

