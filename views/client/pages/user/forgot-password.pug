extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    div.recover
        +alert-error(5000)

        div.cover.container
            div.recover__ctn
                div.recover__title QUÊN MẬT KHẨU
                div.recover__instruct Nhập địa chỉ email của bạn và chúng tôi sẽ gửi cho bạn hướng dẫn để tạo mật khẩu mới
                form(
                    action=`/user/password/forgot`
                    method="POST"
                )
                    div.recover__input
                        input(type="text", placeholder="Email", name="email", required)
                    div(class="form-group recover__button my-5")
                        button(
                            type="submit"
                        ) GỬI MÃ XÁC MINH