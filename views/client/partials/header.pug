div(id='header navbar navbar-expand-sm')
    .header
        .container.px-lg-5
            .header__top.d-flex.justify-content-between.align-items-center
                .header__top-left.navbar-brand
                    .header__logo
                        a(href="/")
                            img(src="/client/images/header-logo.webp", alt="header__logo", class="header__logo-link")
                .header__sm-md.d-block.d-md-none.d-xl-none
                    .header__sm-select.d-flex.justify-content-between
                        | Chọn rạp
                        i.fa-solid.fa-caret-down
                    .header__sm-mn2
                        ul.header__sm-li-m
                            li.header__sm-item-m: a(href="#") Cinestar Hà Nội
                            li.header__sm-item-m: a(href="#") Cinestar Hà Tĩnh
                            li.header__sm-item-m: a(href="#") Cinestar Nghệ Anh
                            li.header__sm-item-m: a(href="#") Cinestar Thanh Hóa
                            li.header__sm-item-m: a(href="#") Cinestar Hải Phòng
                            li.header__sm-item-m: a(href="#") Cinestar Hà Nam
                button.header__right.navbar-toggler.d-block.d-md-none(type="button")
                    span.navbar-toggler-icon
                .header__sm-r
                    ul.header__sm-li
                        li.header__sm-item: a(href="") TRANG CHỦ
                        li.header__sm-item: a(href="") ĐẶT VÉ
                        li.header__sm-item: a(href="") BẮP NƯỚC
                        li.header__sm-item: a(href="") LỊCH CHIẾU
                        li.header__sm-item: a(href="") KHUYẾN MÃI
                        li.header__sm-item: a.btn-login(href="") THÀNH VIÊN
                    ul.header__sm-li
                        li.header__sm-item2: a(href="") Dịch vụ sự kiện
                        li.header__sm-item2: a(href="") Giới thiệu
                        li.header__sm-item2: a(href="") Tất cả các dịch vụ giải trí
                        li.header__sm-item2: a(href="") Ngôn ngữ: Việt Nam
                .header__top-middle.d-none.d-md-flex.d-xl-flex
                    .header__top-button
                        a(href="/movies").header__buy-tickets ĐẶT VÉ NGAY
                    .header__top-button
                        a(href="/popcorns").header__buy-popcorn ĐẶT BẮP NGAY
                .header__top-right.d-none.d-xl-flex
                    .header__top-search.d-flex
                        form(
                            action="/search"
                            method="GET"
                        )
                            input.header__top-search-ip(
                                type="text"
                                placeholder="Tìm phim, rạp ..."
                                name="keyword"
                                value=keyword
                            )
                            button(type="submit")
                                i.fa-solid.fa-magnifying-glass
                    .header__top-user.d-flex.align-items-center.btn-login
                        if(user)
                            i.fa-regular.fa-circle-user(style="font-size: 20px")
                            a.header__top-user-info.d-none.d-xl-flex(
                                href="/user/info"
                                style="margin-right: 20px"
                            ) #{user.fullName.length > 8 ? user.fullName.substring(0, 8) + '...' : user.fullName}
                            i.fa-solid.fa-right-from-bracket(style="font-size: 20px")
                            a.header__top-user-login.d-none.d-xl-flex.button-logout(href="/user/logout") Đăng xuất
                        else
                            a.header__top-user-login.d-none.d-xl-flex(href="/user/login") 
                                i.fa-regular.fa-user.fa-2x
                                span Đăng nhập
                .header__top-right-sm.d-none.d-md-flex.d-xl-none
                    i.fa-solid.fa-magnifying-glass
                    i.fa-regular.fa-user.fa-2x.btn-login
                .header__top-language.d-none.d-md-flex.align-items-center.px-lg-3
                    img(src="/client/images/co vn.png", alt="flag-vn", class="header__top-flag")
                    select
                        option(value="vietnam") Việt Nam
            .header__middle.align-items-center.d-none.d-md-flex.justify-content-between
                
form(
        action=""
        method="POST"
        id="form-logout"
        data-path=`/user/logout`
    )